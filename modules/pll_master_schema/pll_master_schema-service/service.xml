<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="pll_master_schema">
	<namespace>pll_master</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity local-service="true" name="Departments" remote-service="false" uuid="false">

		<!-- PK fields -->

		<column name="departmentId" primary="true" type="long" />

		<!-- Other fields -->
		<column name="department" type="String" />
		
		<column name="locationId" type="long" />
		
		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />
		
	

		<finder return-type="Collection" name="locationId">
		<finder-column name="locationId"/>
		</finder>

		<!-- References -->

		<reference entity="AssetEntry" package-path="com.liferay.portlet.asset" />
		<reference entity="AssetTag" package-path="com.liferay.portlet.asset" />
	</entity>
	<entity local-service="true" name="Location" remote-service="false" uuid="false">

		<!-- PK fields -->

		<column name="locationId" primary="true" type="long" />

		<!-- Other fields -->
		<column name="location" type="String" />
		
		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />
		
		
		<finder return-type="Collection" name="locationId">
			<finder-column name="locationId"/>
			</finder>
	</entity>
</service-builder>