<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.pll.employee.directory">
	<namespace>pll</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity local-service="true" name="EmployeeDirectory" remote-service="false" uuid="false">

		<column name="employeeId" primary="true" type="long" />
     	<column name="groupId" type="long" />
        <column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		
        <column name="employeeName" type="String" />
		<column name="designation" type="String" />
		<column name="extentionNumber" type="String" />
		<column name="directNumber" type="String" />
		<column name="mobileNumber" type="String" />
		<column name="alternateNumber" type="String" />
		<column name="residenceNumber" type="String" />
         <column name="faxNumber" type="String" />
		 <column name="location" type="String" />
		  <column name="department" type="String" />
		 <column name="bloodGroup" type="String" />
		<column name="fileEntryId" type="long" />
		 <column name="presentGrade" type="String" />
		<column name="passportNumber" type="String" />
		<column name="passportValidity" type="Date" />
		<column name="anniversary" type="Date" />
		<column name="uanNumber" type="String" />
         <column name="aboutMe" type="String" />



		<finder name="employeeId" return-type="Collection">
			<finder-column name="employeeId" />
		</finder>
		<finder name="location" return-type="Collection">
			<finder-column name="location" />
		</finder>
		<finder name="Department" return-type="Collection">
			<finder-column name="department" />
		</finder>
	</entity>
	
</service-builder>